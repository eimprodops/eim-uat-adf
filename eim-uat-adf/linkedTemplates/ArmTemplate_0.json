{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "eim-uat-adf"
		},
		"eim_g2lake_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'eim_g2lake'"
		},
		"eim_hana_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'eim_hana'"
		},
		"eim_sqldb_dyn365byod_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'eim_sqldb_dyn365byod'"
		},
		"eimprodkv_properties_typeProperties_baseUrl": {
			"type": "string",
			"defaultValue": "https://eim-prod-kv.vault.azure.net/"
		},
		"eim_g2lake_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://eimuatg2lake.dfs.core.windows.net"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/eimprodkv')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "AzureKeyVault",
				"typeProperties": {
					"baseUrl": "[parameters('eimprodkv_properties_typeProperties_baseUrl')]"
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/eim-uat-ir')]",
			"type": "Microsoft.DataFactory/factories/integrationRuntimes",
			"apiVersion": "2018-06-01",
			"properties": {
				"type": "SelfHosted",
				"description": "EIM UAT adf integration runtime",
				"typeProperties": {}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/eim_g2lake')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"description": "EIM G2 Lake",
				"annotations": [],
				"type": "AzureBlobFS",
				"typeProperties": {
					"url": "[parameters('eim_g2lake_properties_typeProperties_url')]",
					"accountKey": {
						"type": "SecureString",
						"value": "[parameters('eim_g2lake_accountKey')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/eim_hana')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"description": "EIM HANA Database",
				"annotations": [],
				"type": "SapHana",
				"typeProperties": {
					"connectionString": "[parameters('eim_hana_connectionString')]",
					"password": {
						"type": "AzureKeyVaultSecret",
						"store": {
							"referenceName": "eimprodkv",
							"type": "LinkedServiceReference"
						},
						"secretName": "eimuathanasec"
					}
				},
				"connectVia": {
					"referenceName": "eim-uat-ir",
					"type": "IntegrationRuntimeReference"
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/integrationRuntimes/eim-uat-ir')]",
				"[concat(variables('factoryId'), '/linkedServices/eimprodkv')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/eim_sqldb_dyn365byod')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"description": "EIM BYOD Database for ALM NZ Dynamics 365",
				"annotations": [],
				"type": "AzureSqlDatabase",
				"typeProperties": {
					"connectionString": "[parameters('eim_sqldb_dyn365byod_connectionString')]",
					"password": {
						"type": "AzureKeyVaultSecret",
						"store": {
							"referenceName": "eimprodkv",
							"type": "LinkedServiceReference"
						},
						"secretName": "eimuatsqldbdynsec"
					}
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/eimprodkv')]"
			]
		}
	]
}